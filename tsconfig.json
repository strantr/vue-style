{
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "./",
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src"
    ]
}